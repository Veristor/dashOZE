  "shortcuts": [
    {
      "name": "Portfolio Overview",
      "short_name": "Portfolio",
      "description": "View current portfolio performance",
      "url": "/#portfolio",
      "icons": [
        {
          "src": "assets/images/icons/shortcut-portfolio.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Risk Analysis",
      "short_name": "Risk",
      "description": "Check redispatch risk levels",
      "url": "/#risk",
      "icons": [
        {
          "src": "assets/images/icons/shortcut-risk.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Forecasts",
      "short_name": "Forecasts",
      "description": "View generation forecasts",
      "url": "/#forecasts",
      "icons": [
        {
          "src": "assets/images/icons/shortcut-forecasts.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "categories": [
    "business",
    "productivity",
    "utilities",
    "finance"
  ],
  
  "screenshots": [
    {
      "src": "assets/images/screenshots/desktop-overview.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard Overview - Desktop"
    },
    {
      "src": "assets/images/screenshots/mobile-overview.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Dashboard Overview - Mobile"
    },
    {
      "src": "assets/images/screenshots/desktop-charts.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Advanced Charts - Desktop"
    },
    {
      "src": "assets/images/screenshots/mobile-portfolio.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Portfolio Management - Mobile"
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+enspirion",
      "url": "/?action=%s"
    }
  ],
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ]
}